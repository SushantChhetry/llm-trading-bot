# Use Python 3.13 slim image
FROM python:3.13-slim

# Set working directory
WORKDIR /app

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY web-dashboard/requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the API server code (use supabase version with CORS fixes)
COPY web-dashboard/api_server_supabase.py .
COPY web-dashboard/supabase_client.py .

# Copy the directory structure for imports
COPY config ./config
COPY src ./src

# Create data directory
RUN mkdir -p data/logs

# Set PYTHONPATH to include both /app and parent for imports
ENV PYTHONPATH=/app

# Expose port
EXPOSE 8001

# Health check - Use /live for liveness, /ready for readiness
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:${PORT:-8001}/live || exit 1

# Run the API server
# The server reads PORT from environment variable automatically
CMD ["python", "api_server_supabase.py"]
