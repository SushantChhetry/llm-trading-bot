# Production Environment Configuration for Trading Bot
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=production

# Supabase Configuration
# Required for API server to persist data
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here  # Optional: for admin operations

# LLM Configuration
LLM_PROVIDER=deepseek
LLM_API_KEY=your_deepseek_api_key
LLM_MODEL=deepseek-chat

# Trading Configuration
TRADING_MODE=paper  # Options: paper, live
USE_TESTNET=true    # Note: Kraken does not have testnet - this flag has limited effect
EXCHANGE=kraken     # Options: kraken, bybit, binance, coinbase
# Kraken is US-friendly and doesn't require testnet for safe paper trading
SYMBOL=BTC/USDT     # Note: Kraken may use BTC/USD format - adjust if needed
INITIAL_BALANCE=10000.0
MAX_POSITION_SIZE=0.1
MAX_LEVERAGE=10.0
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=3.0
RUN_INTERVAL_SECONDS=150

# Behavioral Simulation
MAX_ACTIVE_POSITIONS=6
MIN_CONFIDENCE_THRESHOLD=0.6
FEE_IMPACT_WARNING_THRESHOLD=20.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/logs/bot.log

# Database (Supabase)
DATABASE_URL=postgresql://postgres.[PROJECT_ID]:[PASSWORD]@[PROJECT_ID].supabase.co:5432/postgres

# Exchange API Keys
# For paper trading: Optional - may be needed for fetching real market data from Kraken
# For live trading: Required - must have valid Kraken API credentials
# Note: Kraken does not provide separate testnet keys (no testnet environment available)
EXCHANGE_API_KEY=your_kraken_api_key
EXCHANGE_API_SECRET=your_kraken_api_secret
# TESTNET_API_KEY and TESTNET_API_SECRET are not applicable for Kraken
