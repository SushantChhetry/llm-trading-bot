# Trading Bot Configuration
TRADING_MODE=paper
USE_TESTNET=true
LLM_PROVIDER=mock
LLM_API_KEY=
LLM_MODEL=

# Exchange Configuration
EXCHANGE=bybit
SYMBOL=BTC/USDT

# Trading Parameters
INITIAL_BALANCE=10000.0
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=3.0
RUN_INTERVAL_SECONDS=300

# Logging
LOG_LEVEL=INFO

# API Keys (set these for live trading)
# EXCHANGE_API_KEY=your_exchange_api_key
# EXCHANGE_API_SECRET=your_exchange_api_secret
# TESTNET_API_KEY=your_testnet_api_key
# TESTNET_API_SECRET=your_testnet_api_secret

# Database Configuration (Supabase)
# Required for API server to persist data
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_KEY=your_supabase_service_key  # Optional: for admin operations
# DATABASE_URL=postgresql://postgres.xxx:password@db.xxx.supabase.co:5432/postgres  # Optional: for Alembic migrations

# API Server Configuration
# ENVIRONMENT=production
# CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
