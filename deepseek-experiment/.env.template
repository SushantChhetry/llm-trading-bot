# Trading Bot Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# TRADING MODE
# =============================================================================
# Trading mode: "paper" for paper trading, "live" for real trading
TRADING_MODE=paper

# Use exchange testnet (true/false)
USE_TESTNET=true

# =============================================================================
# EXCHANGE CONFIGURATION
# =============================================================================
# Exchange to use: "bybit", "binance", "coinbase", "kraken"
EXCHANGE=bybit

# Trading pair (e.g., BTC/USDT, ETH/USDT)
SYMBOL=BTC/USDT

# Exchange API keys (for live trading)
EXCHANGE_API_KEY=
EXCHANGE_API_SECRET=

# Testnet API keys (separate from live keys)
TESTNET_API_KEY=
TESTNET_API_SECRET=

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================
# LLM provider: "mock", "deepseek", "openai", "anthropic"
LLM_PROVIDER=mock

# API key for your chosen LLM provider
LLM_API_KEY=

# Optional: Override API URL (leave empty for provider defaults)
LLM_API_URL=

# Optional: Override model name (leave empty for provider defaults)
# DeepSeek: deepseek-chat
# OpenAI: gpt-3.5-turbo, gpt-4
# Anthropic: claude-3-sonnet-20240229
LLM_MODEL=

# =============================================================================
# TRADING PARAMETERS
# =============================================================================
# Initial paper trading balance in USDT
INITIAL_BALANCE=10000.0

# Maximum position size as % of balance (0.1 = 10%)
MAX_POSITION_SIZE=0.1

# Stop loss percentage (2.0 = 2%)
STOP_LOSS_PERCENT=2.0

# Take profit percentage (3.0 = 3%)
TAKE_PROFIT_PERCENT=3.0

# Trading cycle interval in seconds (150 = 2.5 minutes)
RUN_INTERVAL_SECONDS=150

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Maximum leverage allowed (1.0-10.0)
MAX_LEVERAGE=10.0

# Default leverage if not specified (usually 1.0 for safety)
DEFAULT_LEVERAGE=1.0

# Trading fee percentage (0.05 = 0.05% taker fee)
TRADING_FEE_PERCENT=0.05

# Maximum risk per trade as % of balance (2.0 = 2%)
MAX_RISK_PER_TRADE=2.0

# Maximum number of simultaneous positions
MAX_ACTIVE_POSITIONS=6

# Minimum confidence threshold to execute trade (0.6 = 60%)
MIN_CONFIDENCE_THRESHOLD=0.6

# Warning threshold if fees exceed this % of PnL (20.0 = 20%)
FEE_IMPACT_WARNING_THRESHOLD=20.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Supabase URL (for cloud database)
SUPABASE_URL=

# Supabase API key (anon/public key)
SUPABASE_KEY=

# PostgreSQL database URL (for local database)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://trading_user:trading_password@postgres:5432/trading_bot

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# Environment: "development" or "production"
ENVIRONMENT=development

# API server port (Railway will override this)
PORT=8001

# CORS allowed origins (comma-separated, no spaces)
# Development: http://localhost:3000,http://127.0.0.1:3000
# Production: https://your-frontend.vercel.app
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
