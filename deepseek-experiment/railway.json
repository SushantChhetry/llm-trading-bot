{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "watch": [
      "src/**",
      "config/**",
      "requirements.txt",
      "railway.json",
      "config.yaml",
      "alembic.ini",
      "alembic/**"
    ]
  },
  "deploy": {
    "startCommand": "python -m src.main",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "sleepApplication": false,
    "numReplicas": 1
  }
}
