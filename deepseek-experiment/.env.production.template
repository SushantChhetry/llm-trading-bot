# Production Environment Configuration Template
# Use this for Railway, Vercel, or other production deployments

# =============================================================================
# CRITICAL: TRADING MODE (Set to "live" for real trading)
# =============================================================================
TRADING_MODE=paper
USE_TESTNET=true

# =============================================================================
# EXCHANGE CONFIGURATION
# =============================================================================
EXCHANGE=bybit
SYMBOL=BTC/USDT

# IMPORTANT: Store these securely in your deployment platform's secret manager
# Never commit real API keys to git
EXCHANGE_API_KEY=your_live_exchange_api_key_here
EXCHANGE_API_SECRET=your_live_exchange_api_secret_here

# =============================================================================
# LLM PROVIDER (Use real provider in production)
# =============================================================================
LLM_PROVIDER=deepseek
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=deepseek-chat

# =============================================================================
# TRADING PARAMETERS
# =============================================================================
INITIAL_BALANCE=10000.0
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=3.0
RUN_INTERVAL_SECONDS=150

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
MAX_LEVERAGE=10.0
DEFAULT_LEVERAGE=1.0
TRADING_FEE_PERCENT=0.05
MAX_RISK_PER_TRADE=2.0
MAX_ACTIVE_POSITIONS=6
MIN_CONFIDENCE_THRESHOLD=0.6
FEE_IMPACT_WARNING_THRESHOLD=20.0

# =============================================================================
# DATABASE (Supabase for production)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
ENVIRONMENT=production
PORT=8001

# CORS origins - Add your Vercel domain
# Railway automatically allows all origins, but explicit is better
CORS_ORIGINS=https://your-app.vercel.app,https://your-app-preview.vercel.app

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
